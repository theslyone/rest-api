{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "newLine": "LF",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noUnusedParameters": false,
    "noUnusedLocals": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es2020",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "src/__tests__/mockOf.tsmocksrc/__tests__/mockOf.ts_tests__/mockOf.ts"
  ],
  "exclude": ["node_modules/**"]
}
